[Unit]
Description=URL Agent (poll sheet, fetch pages, save JSON)
Wants=brave-agent.service
After=brave-agent.service

[Service]
Type=oneshot
EnvironmentFile=-%h/xAIO-URL-Agent/.runtime/.env
WorkingDirectory=%h/xAIO-URL-Agent
ExecStart=/usr/bin/flock -n ./locks/capture.lock %h/xAIO-URL-Agent/venv/bin/python %h/xAIO-URL-Agent/src/agent.py --config %h/xAIO-URL-Agent/.runtime/config.yaml
