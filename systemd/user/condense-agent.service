[Unit]
Description=Condense URL Agent (make AI-ready envelope JSON)
After=default.target

[Service]
Type=oneshot
EnvironmentFile=-%h/xAIO-URL-Agent/.runtime/.env
WorkingDirectory=%h/xAIO-URL-Agent
ExecStart=/usr/bin/flock -n ./locks/condense.lock %h/xAIO-URL-Agent/venv/bin/python %h/xAIO-URL-Agent/src/condense_queue.py --config %h/xAIO-URL-Agent/.runtime/config.yaml
